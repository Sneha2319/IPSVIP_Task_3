{
    "manifest_version" : 2,
    "name" : "Notepro",
    "version" : "1.0",
    "description" : "A Simple Note pad which allows the user to directly notedowm  the notes while using the web browser",
    "author":"Sneha Murugesh",
  
    "background":[
        {
            "scripts":["popup.js"]
        }
    ],
  
    "browser_action" : {
        "default_popup" : "popup.html",
        "default_icon": {
            "128": "icon.png"
        }
       
    },
    "permissions":[
        "tabs",
        "storage"
    ]
}